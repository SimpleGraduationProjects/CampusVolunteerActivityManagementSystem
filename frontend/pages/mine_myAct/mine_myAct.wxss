/* pages/mine_myAct/mine_myAct.wxss */
.nav{
  width: 100%;
  height: 130rpx;
  background-color: #77BB42;
  margin: 0 auto;
  text-align: left;
}
.title{
  font-size: 40rpx;
  color: #fff;
  line-height: 130rpx;
  margin-left: 30rpx;
  font-family: '黑体';
}
.container {
  background-color: #eee;
  padding: 18rpx 0;
}
/* .act {
  padding: 25rpx;
} */
.act-item {
  padding: 20rpx;
  margin-bottom: 12rpx;
  background-color: #fff;
  width: 100%;
  display: flex;
}
.act-image {
  width: 120rpx;
  height: 120rpx;
  margin-left: 25rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  float: left; 
  display: flex;
  overflow: hidden;
}
.act-info{
  float: left;
  margin: 0 auto;
  margin-left: 18rpx;
  margin-top: 15rpx;
}
.txt{
  color: rgb(109, 109, 109);
  font-size: 30rpx;
  display: block;
}
.act-title {
  font-size: 34rpx;
  color: #000;
}
.comment-btn {
  height: 48rpx;
  line-height: 48rpx;
  float: right;
  margin-right: 18rpx;
  font-size: 34rpx;
  border-radius: 18rpx;
  background-color: #ff5a18;
  padding: 10rpx 24rpx;
  color: #fff;
  margin-top: 60rpx;
}
.scan-button {
  position: absolute;
  right: 20rpx;
  margin-top: -60rpx;
}