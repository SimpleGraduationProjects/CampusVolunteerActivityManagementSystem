.act-item {
  padding: 20rpx;
  margin-bottom: 12rpx;
  background-color: #fff;
  width: 100%;
  display: flex;
}
.act-image {
  width: 120rpx;
  height: 120rpx;
  margin-left: 25rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
  float: left; 
  display: flex;
  overflow: hidden;
}
.act-info{
  float: left;
  margin: 0 auto;
  margin-left: 18rpx;
  margin-top: 15rpx;
}
.act-info-wrapper {
  width: 100%;
  background-color: #fff;
  padding: 18rpx;
}
.act-info-wrapper::after {
  display: block;
  content: " ";
  visibility: none;
  clear: both;
  height: 0;
  zoom: 1;
}
.evaluate-wrapper {
  background-color: #fff;
  margin-top: 18rpx;
  width: 100%;
}
.evaluate {
  margin-top: 25rpx;
}
.evaluate-title {
  margin-left: 25rpx;
}
.txt{
  color: rgb(109, 109, 109);
  font-size: 30rpx;
  display: block;
  margin-top: 8rpx;
}
.act-title {
  font-size: 34rpx;
  color: #000;
}
.publish-btn {
  height: 48rpx;
  line-height: 48rpx;
  float: right;
  margin-right: 18rpx;
  font-size: 34rpx;
  border-radius: 18rpx;
  background-color: #ff5a18;
  padding: 10rpx 24rpx;
  color: #fff;
  margin-top: 30rpx;
}
.evaluate-txt {
  margin: 0 auto;
  /* margin: 25rpx */
  padding: 25rpx;
  width: 87%;
  height: 170rpx;
  border: solid 2rpx rgb(109, 109, 109);
  margin-top: 15rpx;
  font-size: 34rpx;
}