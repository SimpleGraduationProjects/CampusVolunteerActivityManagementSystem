/* pages/mine_myAct_comment/mine_myAct_comment.wxss */
.nav{
  width: 100%;
  height: 130rpx;
  background-color: #77BB42;
  margin: 0 auto;
  text-align: left;
}
.title{
  font-size: 40rpx;
  color: #fff;
  line-height: 130rpx;
  margin-left: 30rpx;
  font-family: '黑体';
}
.points{
  border: 4rpx solid #77BB42;
  border-radius: 5rpx;
  width: 120rpx;
  margin-top: 4rpx;
  margin-right:25rpx;
  text-align: center;
  padding: 2rpx 20rpx;
}
.container {
  background-color: #eee;
  padding: 18rpx 0 0 0;
}
